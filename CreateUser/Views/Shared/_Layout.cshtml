@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ADD USER</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
    @* If you need per-view CSS, add extra links in views or use section *@
</head>
<body>
    <header class="nav">
        <div class="nav-left">
            <div class="logo-box">
                <img src="~/imgs/programming2.png" alt="Filmix Logo" style="width:100%; height:100%;">
            </div>
            <span class="logo-text">Add User</span>
            <a asp-controller="Home" asp-action="Index">CreateUser</a>
            <a asp-controller="Category" asp-action="Index">Show All User List</a>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)


    <footer class="app-footer">
        <div class="container">
            <span class="developer">Developed by Faiza Alhandali</span>
        </div>
    </footer>



</body>
</html>

